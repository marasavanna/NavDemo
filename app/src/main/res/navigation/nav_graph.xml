<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentA">

    <fragment
        android:id="@+id/fragmentA"
        android:name="com.example.navdemo.fragmentA.FragmentA">
        <action
            android:id="@+id/fragmentAToFragmentB"
            app:destination="@+id/fragmentB" />
    </fragment>

    <fragment
        android:id="@+id/fragmentB"
        android:name="com.example.navdemo.fragmentB.FragmentB">
        <action
            android:id="@+id/fragmentBToFragmentC"
            app:destination="@+id/fragmentC" />
    </fragment>

    <fragment
        android:id="@+id/fragmentC"
        android:name="com.example.navdemo.fragmentC.FragmentC">
        <action
            android:id="@+id/fragmentCToFragmentD"
            app:destination="@+id/fragmentD" />
    </fragment>

    <fragment
        android:id="@+id/fragmentD"
        android:name="com.example.navdemo.fragmentD.FragmentD" />

</navigation>